# Sentry Backend - copy to .env.local and fill in values

# Supabase (required for API key validation)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# SDK onboarding flow
SDK_VERIFICATION_BASE_URL=http://localhost:3000
SDK_DEFAULT_DSN=http://localhost:8001
SDK_SCHEMA_STRICT_STARTUP=false

# Risk notifications
NOTIFICATION_COOLDOWN_SECONDS=300

# Optional webhook delivery
RISK_ALERT_WEBHOOK_URL=

# Email delivery (SMTP)
EMAIL_ALERT_FROM=alerts@yourdomain.com
EMAIL_ALERT_TO=you@yourdomain.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_USE_TLS=true
